@inherits LayoutComponentBase
@using BlazorApp_ProductosAPI.Services
@inject IAuthService AuthService
@inject IJSRuntime JS

<div class="page">
    @if (isAuthenticated)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool isAuthenticated = false;
    private bool _initialized = false;

    protected override async Task OnInitializedAsync()
    {
        await CheckAuthentication();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            try
            {
                await JS.InvokeVoidAsync("registerAuthChangeListener", DotNetObjectReference.Create(this));
            }
            catch { }
            _initialized = true;
        }
    }

    private async Task CheckAuthentication()
    {
        try
        {
            var basicAuth = await AuthService.IsLoggedInAsync();
            var finalToken = await AuthService.GetTokenFINALAsync();
            isAuthenticated = basicAuth || !string.IsNullOrEmpty(finalToken);
        }
        catch
        {
            isAuthenticated = false;
        }
    }

    public async Task RefreshAuthentication()
    {
        await CheckAuthentication();
        StateHasChanged();
    }

    [JSInvokable]
    public async Task OnAuthChanged()
    {
        await CheckAuthentication();
        StateHasChanged();
    }
}

<script>
    window.registerAuthChangeListener = function(dotnetHelper){
        window.addEventListener('storage', function(e) {
            if (e.key === 'auth_token_final' || e.key === 'auth_token') {
                try { if (dotnetHelper) dotnetHelper.invokeMethodAsync('OnAuthChanged'); } catch {}
            }
        });
        var originalSetItem = localStorage.setItem;
        localStorage.setItem = function(key, value) {
            originalSetItem.apply(this, arguments);
            if (key === 'auth_token_final' || key === 'auth_token') {
                try { if (dotnetHelper) dotnetHelper.invokeMethodAsync('OnAuthChanged'); } catch {}
            }
        };
    }
</script>

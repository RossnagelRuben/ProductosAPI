    private async Task SendInventory()
    {
        try
        {
            isSendingInventory = true;
            inventorySentSuccessfully = false;
            StateHasChanged();

            // Obtener el token final (token dev + token usuario)
            var tokenFinal = await AuthService.GetTokenFINALAsync();
            if (string.IsNullOrEmpty(tokenFinal))
            {
                throw new Exception("No se encontró el token final de autenticación. Por favor, inicie sesión nuevamente.");
            }

            // Preparar los datos para enviar
            var inventoryRequest = new InventoryRequest
            {
                FechaHora = DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm:ss.fffZ"),
                ProveedorID = null,
                DetalleRecepcion = null,
                DepositoID = 0,
                TalonarioID = 0,
                NroComprobante = 0,
                SectorID = null,
                SucursalID = null,
                ProyectoID = null,
                AlmaUserID = null,
                Total = null,
                VehiculoID = null,
                ConductorID = null,
                Items = inventoryItems.Select(item => new InventoryItemRequest
                {
                    CodigoID = 0, // Este campo debería venir del producto si está disponible
                    Cantidad = item.InventoryStock,
                    ImporteUnidad = null,
                    TotalItem = null,
                    ItemRecepcionEstadoID = 0,
                    Detalle = null,
                    ProductoUbicacionID = null
                }).ToList(),
                ItemsNoHallados = new List<ItemNoHalladoRequest>() // Por ahora vacío, se puede implementar lógica para productos no encontrados
            };

            // Serializar a JSON
            var json = JsonSerializer.Serialize(inventoryRequest, new JsonSerializerOptions
            {
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase
            });

            Console.WriteLine($"📤 JSON a enviar: {json}");
            Console.WriteLine($"🔑 Token Final: {tokenFinal}");
            Console.WriteLine($"📊 Items a enviar: {inventoryItems.Count}");

            // Configurar headers
            Http.DefaultRequestHeaders.Clear();
            Http.DefaultRequestHeaders.Add("Authorization", $"Bearer {tokenFinal}");
            Http.DefaultRequestHeaders.Add("Idempotency-Key", Guid.NewGuid().ToString());

            // Crear el contenido con el Content-Type correcto
            var content = new StringContent(json, System.Text.Encoding.UTF8, "application/json");

            // Enviar a la API
            var apiUrl = "https://drrsystemas4.azurewebsites.net/Operaciones/Recepcion"; // URL de la API
            Console.WriteLine($"🌐 Enviando a: {apiUrl}");
            
            var response = await Http.PostAsync(apiUrl, content);
            
            Console.WriteLine($"📡 Respuesta recibida - Status: {response.StatusCode}");
            Console.WriteLine($"📡 Headers de respuesta: {string.Join(", ", response.Headers.Select(h => $"{h.Key}: {string.Join(", ", h.Value)}"))}");

            if (response.IsSuccessStatusCode)
            {
                var responseContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"✅ RESPUESTA EXITOSA: {responseContent}");
                
                inventorySentSuccessfully = true;
                Console.WriteLine("✅ Inventario enviado exitosamente");
                
                // Limpiar lista después del envío exitoso
                inventoryItems.Clear();
                
                // Cerrar modal después de 2 segundos
                await Task.Delay(2000);
                showInventoryModal = false;
                inventorySentSuccessfully = false;
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"❌ ERROR DEL SERVIDOR:");
                Console.WriteLine($"❌ Status Code: {response.StatusCode}");
                Console.WriteLine($"❌ Error Content: {errorContent}");
                Console.WriteLine($"❌ Reason Phrase: {response.ReasonPhrase}");
                
                throw new Exception($"Error del servidor: {response.StatusCode} - {errorContent}");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ EXCEPCIÓN CAPTURADA:");
            Console.WriteLine($"❌ Tipo: {ex.GetType().Name}");
            Console.WriteLine($"❌ Mensaje: {ex.Message}");
            Console.WriteLine($"❌ Stack Trace: {ex.StackTrace}");
            
            // Mostrar mensaje de error al usuario
            await JSRuntime.InvokeVoidAsync("alert", $"Error enviando inventario: {ex.Message}");
        }
        finally
        {
            isSendingInventory = false;
            StateHasChanged();
        }
    }


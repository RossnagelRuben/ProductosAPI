                // Fallback: usar original si falla el resize (p.ej. BMP sin soporte)
                var base64 = Convert.ToBase64String(originalBytes);
                ImageDataUrl = $"data:{ImageMimeType};base64,{base64}";
                ImageBytes = originalBytes;

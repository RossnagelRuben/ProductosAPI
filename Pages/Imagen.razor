                    // Intentar extraer proveedor de forma manual del texto
                    var proveedorManual = ExtraerProveedorManual(text);
                    if (!string.IsNullOrWhiteSpace(proveedorManual))
                    {
                        Console.WriteLine($"üîç Proveedor extra√≠do manualmente: {proveedorManual}");
                        return (text.Trim(), proveedorManual);
                    }
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"üîç Error parsing JSON: {ex.Message}");
                // Intentar extraer proveedor de forma manual del texto
                var proveedorManual = ExtraerProveedorManual(text);
                if (!string.IsNullOrWhiteSpace(proveedorManual))
                {
                    Console.WriteLine($"üîç Proveedor extra√≠do manualmente (catch): {proveedorManual}");
                    return (text.Trim(), proveedorManual);
                }
            }
            
            // Fallback: buscar solo productos como antes
            var start = text.IndexOf('[');
            var end = text.LastIndexOf(']');
            
            if (start >= 0 && end > start)
            {
                var result = text.Substring(start, end - start + 1).Trim();
                Console.WriteLine($"üîç Fallback - Solo productos encontrados: {result}");
                return (result, "");
            }
            
            Console.WriteLine($"üîç Fallback - Texto completo: {text.Trim()}");
            return (text.Trim(), "");
        }
        catch
        {
            return (responseJson, "");
        }
    }

